# Color Scheme
# =========================================================

# Window color
gtk_color_scheme = "main:#343434"			# Main background color
gtk_color_scheme = "inactive:#191919"			# Inactive state
gtk_color_scheme = "text_color:#9B9B9B"			# Text color
gtk_color_scheme = "text_box_color:#2B2B2B"		# Text box color
gtk_color_scheme = "button:#3D3D3D"			# button color
gtk_color_scheme = "button_hover:#646464"		# button hover color

gtk_color_scheme = "white:#ffffff"			# White
gtk_color_scheme = "black:#000000"			# Black
gtk_color_scheme = "accent_color:#f07746"		# Accent color

# Test Colors
gtk_color_scheme = "red:#FF0000"			# Red
gtk_color_scheme = "green:#00FF00"			# Green

